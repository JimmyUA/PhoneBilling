<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">


    <context-param>
        <param-name>portion</param-name>
        <param-value>2</param-value>
    </context-param>

    <display-name>Phone Billing</display-name>
    <description>
        My billing app!
    </description>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <el-ignored>true</el-ignored>
        </jsp-property-group>
    </jsp-config>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error.jsp</location>
    </error-page>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>com.sergey.prykhodko.controller.Registration</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>activate</servlet-name>
        <servlet-class>com.sergey.prykhodko.controller.admin.ClientStatusChanging</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>activate</servlet-name>
        <url-pattern>/activate</url-pattern>
    </servlet-mapping>
    <servlet>
        <description>
        </description>
        <display-name>Locale</display-name>
        <servlet-name>Locale</servlet-name>
        <servlet-class>com.sergey.prykhodko.controller.locale.LocaleHandler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Locale</servlet-name>
        <url-pattern>locale</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>administratorFilter</filter-name>
        <filter-class>com.sergey.prykhodko.filters.AdministratorFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>administratorFilter</filter-name>
        <url-pattern>admin.jsp</url-pattern>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/billing</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>